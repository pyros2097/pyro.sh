localhost:3001 {
	encode zstd gzip
	file_server
	root * ./pyro.sh
	try_files {path} {path}.html

	handle_errors {
		@404 {
			expression {http.error.status_code} == 404
		}
		rewrite @404 /index.html
		file_server
	}
}

localhost:3002 {
	encode zstd gzip
	file_server
	root * ./timer.pyro.sh
}

localhost:3003 {
	encode zstd gzip
	file_server
	root * ./bible.pyro.sh

	handle_errors {
		@404 {
			expression {http.error.status_code} == 404
		}
		rewrite @404 /index.html
		file_server
	}
}

