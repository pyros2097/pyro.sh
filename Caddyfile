assets.pyro.sh {
	encode zstd gzip
	file_server
	root * /home/pi/assets.pyro.sh
}

pyro.sh {
	encode zstd gzip
	file_server
	root * /home/pi/pyro.sh
	rewrite /work /work.html
	rewrite /ref /ref.html
	rewrite /blog /blog.html
	rewrite /blog/gopibot-to-the-rescue /blog/gopibot-to-the-rescue.html
	rewrite /blog/eyecandy-golang-error-reporting /blog/eyecandy-golang-error-reporting.html

	handle_errors {
		@404 {
			expression {http.error.status_code} == 404
		}
		rewrite @404 /notfound.html
		file_server
	}
}

timer.pyro.sh {
	encode zstd gzip
	file_server
	root * /home/pi/timer.pyro.sh
}

